@model SV20T1020639.DomainModels.Supplier
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post">
            @* <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" /> *@
            @Html.HiddenFor(m => m.SupplierID)

            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <input type="text" class="form-control" name="SupplierName" autofocus value="@Model.SupplierName">
                @Html.ValidationMessageFor(m => m.SupplierName,"", new {@style = "color:#f00" })

            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control" name="ContactName" value="@Model.ContactName">
                @Html.ValidationMessage("ContactName", new {@style = "color:#f00" })
            </div>

            <div class="form-group">
                <label>Điện Thoại:</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                @Html.ValidationMessage("Phone", new {@style = "color:#f00" })

            </div>

            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" name="Email" value="@Model.Email">
                @Html.ValidationMessage("Email", new {@style = "color:#f00" })
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control" name="Address" @Model.Address>
            </div>
            <div class="form-group">
                <label>Tỉnh thành:</label>
                @* <select class="form-control" name="Province">
                <option value="">-- Chọn tỉnh/thành</option>
                @foreach (var item in SV20T1020639.BusinessLayers.CommonDataService.ListOfProvinces())
                {
                if (item.ProvinceName == Model.Province)
                {
                <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                }
                else
                {
                <option value="@item.ProvinceName">@item.ProvinceName</option>
                }
                }

                </select> *@
                @Html.DropDownListFor(m=>m.Provice,SelectListHelper.Provinces(),new {@class="form-control"})

                @Html.ValidationMessage(nameof(Model.Provice), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Ngày thành lập:</label>
                <input type="hidden" class="form-control" name="@nameof(Model.BirthDate)" value="@Model.BirthDate" />
                <input type="text" class="form-control date-picker" name="birthDateInput"
                       value="@Model.BirthDate.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en-GB")) " />
               
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-defalt">
                    Quay lại
                </a>
            </div>
            @Html.ValidationMessage("Error", new {@style = "color:#f00" })
        </form>
    </div>
</div>