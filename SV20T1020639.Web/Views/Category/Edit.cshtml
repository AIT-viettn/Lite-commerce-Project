@model SV20T1020639.DomainModels.Category
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post">
           
            <div class="form-group">
                <label>Mã loại:</label>
                <input type="text" class="form-control" name="@nameof(Model.CategoryID)" value="@Model.CategoryID">
            </div>

            <div class="form-group">
                <label>Tên loại:</label>
                <input type="text" class="form-control" name="CategoryName" autofocus value="@Model.CategoryName">
            </div>

            <div class="form-group">
                <label>Thông tin:</label>
                <input type="text" class="form-control" name="Description" value="@Model.Description">
            </div>

            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-defalt">
                    Quay lại
                </a>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>