@model SV20T1020639.Web.Models.CategorySearchResult
@{
    Layout = null;
}
<div>
    <p style="margin:10px 0 10px 0">
        Có <strong>@Model.RowCount</strong> loại trong tổng số <strong>@Model.PageCount</strong> trang
    </p>
    <div class="table-reponsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-primary">
                    <th>Mã loại</th>
                    <th>Tên loại </th>
                    <th>Thông tin</th>
                    <th style="width:80px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.CategoryID</td>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td class="text-right">
                            <a href="~/Category/Edit/@item.CategoryID" class="btn btn-xs btn-info">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/Category/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="text-center">
        <ul class="pagination">
            @if (Model.PageCount > 1)
            {
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    if (Model.Page == p)
                    {
                        <li class="active"><a href="#">@p</a></li>
                    }
                    else
                    {
                        <li><a href="javascript:;" onclick="doSearch('#formSearch',@p)">@p</a></li>
                    }
                }
            }
        </ul>
    </div>
</div>