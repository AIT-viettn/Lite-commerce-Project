@model SV20T1020639.Web.Models.ShipperSearchResult
@{
    Layout = null;
}
<div>
    <p style="margin:10px 0 10px 0">
        Có <strong>@Model.RowCount</strong> đơn vị giao hàng trong tổng số <strong>@Model.PageCount</strong> trang
    </p>
    <div class="table-reponsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-primary">
                    <th>Tên đơn vị giao hàng</th>
                    <th>Điện thoại</th>
                    <th style="width:80px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.ShipperName</td>
                        <td>@item.Phone</td>
                        <td class="text-right">
                            <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-xs btn-info">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-xs btn-danger">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="text-center">
        <ul class="pagination">
            @if (Model.PageCount > 1)
            {
                @for (int p = 1; p <= Model.PageCount; p++)
                {
                    if (Model.Page == p)
                    {
                        <li class="active"><a href="#">@p</a></li>
                    }
                    else
                    {
                        <li><a href="javascript:;" onclick="doSearch('#formSearch',@p)">@p</a></li>
                        @*  <li><a href="~/Shipper?page=@p&searchValue=@Model.SearchValue">@p</a></li>*@
                    }
                }
            }
        </ul>
    </div>
</div>