@model SV20T1020639.DomainModels.Shipper
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Save" method="post">
            <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID" />
            <div class="form-group">
                <label>Tên đơn vị giao hàng:</label>
                <input type="text" class="form-control" name="ShipperName" autofocus value="@Model.ShipperName">
                @Html.ValidationMessageFor(m => m.ShipperName,"", new {@style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Điện Thoại:</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                @Html.ValidationMessageFor(m => m.Phone,"", new {@style = "color:#f00" })

            </div>

            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>Lưu dữ liệu
                </button>
                <a href="~/Shipper" class="btn btn-defalt">
                    Quay lại
                </a>
            </div>
            @Html.ValidationMessage("Error", new {@style = "color:#f00" })
        </form>
    </div>
</div>