@model SV20T1020639.DomainModels.Employee
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="~/Employee/Save">
            <input type="hidden" name="@nameof(Model.EmployeeID)" value="@Model.EmployeeID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="FullName" autofocus value="@Model.FullName" />
                    @Html.ValidationMessageFor(m => m.FullName,"", new {@style = "color:#f00" })

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <input type="hidden" class="form-control" name="@nameof(Model.BirthDate)" value="@Model.BirthDate" />
                    <input type="text" class="form-control date-picker" name="birthDateInput"
                    value="@Model.BirthDate.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en-GB")) "/>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Address" value="@Model.Address" />
                    @Html.ValidationMessageFor(m => m.Address,"", new {@style = "color:#f00" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Phone" value="@Model.Phone" />
                    @Html.ValidationMessageFor(m => m.Phone,"", new {@style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" name="Email" value="@Model.Email" />
                    @Html.ValidationMessage("Email", new {@style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" value="true" @(Model.IsWorking ? "checked" : "") name="IsWorking" />
                            Nhân viên đang làm việc
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="@nameof(Model.Photo)" value="@Model.Photo" />
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    @* <input type="hidden" name="Photo" value="@Model.Photo" /> *@
                    <img id="Photo" src="~/images/employees/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>
            @Html.ValidationMessage("Error", new {@style = "color:#f00" })
        </form>

    </div>
</div>

@* sử dụng js cho việc checkbox
<div class="form-group">
    <div class="col-lg-offset-2 col-sm-10">
        <div class="checkbox">
            <label>
                <input type="checkbox" id="isWorkingCheckbox" name="IsWorking" />
                Nhân viên đang làm việc
            </label>
        </div>
    </div>
</div>

<script>
    // Thêm script sau khi tải trang
    document.addEventListener("DOMContentLoaded", function () {
        // Lấy checkbox bằng ID
        var isWorkingCheckbox = document.getElementById("isWorkingCheckbox");

        // Set giá trị của checkbox dựa trên Model.IsWorking
        isWorkingCheckbox.checked = @(Model.IsWorking.ToString().ToLower());
    });
</script>
