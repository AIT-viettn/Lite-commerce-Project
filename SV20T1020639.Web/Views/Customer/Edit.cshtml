@model SV20T1020639.DomainModels.Customer
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Customer/Save" method="post">

            @*@Html.ValidationSummary("", new {@style = "color:#f00" } ) hiện tất cả thông báo lỗi *@

            @*<input type="hidden" name="@nameof(Model.CustomerID)" value="@Model.CustomerID" />*@
            @Html.HiddenFor(m => m.CustomerID)

            <div class="form-group">
                <label>Tên khách hàng:</label>
                @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control",@autofocus = "autofocus"} )
                @*<input type="text" class="form-control" name="CustomerName" autofocus value="@Model.CustomerName">*@
                @Html.ValidationMessageFor(m => m.CustomerName,"", new {@style = "color:#f00" })
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control" name="ContactName" value="@Model.ContactName">
                @Html.ValidationMessage("ContactName", new {@style = "color:#f00" })

            </div>

            <div class="form-group">
                <label>Điện Thoại:</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" name="Email" value="@Model.Email">
                @Html.ValidationMessage("Email", new {@style = "color:#f00" })

            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control" name="Address" value="@Model.Address">
            </div>
            <div class="form-group">
                <label>Tỉnh thành:</label>
                @* <select class="form-control" name="Province">
                    <option value="">-- Chọn tỉnh/thành</option>
                    @foreach (var item in SV20T1020639.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }

                </select> *@
                @Html.DropDownListFor(m=>m.Province,SelectListHelper.Provinces(),new {@class="form-control"})

                @Html.ValidationMessage(nameof(Model.Province), new { @style = "color:#f00" })
            </div>

            <div class="form-group">
                <label>Trạng thái:</label>
                <!--nên thay bang radio hay checkbox-->
                <select class="form-control" name="IsLocked">
                    @if (Model.IsLocked)
                    {
                        <option value="false">Tài khoản không bị khóa</option>
                        <option value="true" selected>Tài khoản bị khóa</option>
                    }
                    else
                    {
                        <option value="false" selected>Tài khoản không bị khóa</option>
                        <option value="true">Tài khoản bị khóa</option>
                    }

                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>Lưu dữ liệu
                </button>
                <a href="~/Customer" class="btn btn-defalt">
                    Quay lại
                </a>
            </div>
            @Html.ValidationMessage("Error", new {@style = "color:#f00" })

        </form>
    </div>
</div>