@{
    ViewBag.Title = "Quản lý đơn hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!--Form đầu vào tìm kiếm-->
        <form id="formSearch" action="~/Order/Search" method="get" data-container="#searchResult">
            <input type="hidden" name="pageSize" class="form-control" value="@Model.PageSize" />
            <div class="row container-fluid">
                <div class="col-sm-2">
                    <select class="form-control" id="statusOrder" name="Status">
                        <option value="0">-- Trạng thái --</option>
                        <option value="1">Đơn hàng mới (chờ duyệt)</option>
                        <option value="2">Đơn hàng đã duyệt (chờ chuyển hàng)</option>
                        <option value="3">Đơn hàng đang được giao</option>
                        <option value="4">Đơn hàng đã hoàn tất thành công</option>
                        <option value="-1">Đơn hàng bị hủy</option>
                        <option value="-2">Đơn hàng bị từ chối</option>
                    </select>
                </div>
                <div class="col-sm-2">
                    <input type="text" name="orderTime" class="form-control daterange-picker" placeholder="" />
                </div>
                <div class="col-sm-8 input-group">
                    <input type="text" name="searchValue"
                           class="form-control"
                           placeholder="Tìm kiếm theo tên khách hàng, nhân viên hoặc tên đơn vị giao hàng">
                    <span class="input-group-btn">
                        <button type="submit" id="search-btn" class="btn btn-flat btn-info">
                            <i class="fa fa-search"></i> Tìm kiếm
                        </button>
                    </span>
                </div>
            </div>
        </form>

        <!-- Kết quả tìm kiếm -->
        <div id="searchResult"></div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#formSearch").submit(function (e) {
                e.preventDefault();
                doSearch(this, 1);
                return;
            });

            doSearch("#formSearch", @Model.Page);
        });

        $('#statusOrder').change(function () {
            doSearch("#formSearch", 1);
        });

        function doSearch(formSearchInput, page) {
            var url = $(formSearchInput).prop("action");
            var container = $(formSearchInput).data("container");
            var postData = $(formSearchInput).serializeArray();
            postData.push({ "name": "page", "value": page });

            // Lấy giá trị thời gian từ input có name là orderTime
            var orderTime = $(formSearchInput).find('input[name="orderTime"]').val();
            if (orderTime !== '') {
                // Chia chuỗi thời gian thành khoảng thời gian bắt đầu và kết thúc
                var timeRange = orderTime.split(' - ');
                // Thêm vào postData
                postData.push({ "name": "FromTime", "value": timeRange[0] });
                postData.push({ "name": "ToTime", "value": timeRange[1] });
            }

            $.ajax({
                url: url,
                type: "POST",
                data: postData,
                error: function () {
                    alert("Your request is not valid!");
                },
                success: function (data) {
                    $(container).html(data);
                }
            });
        }
    </script>
}
