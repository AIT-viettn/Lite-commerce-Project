

@{
    ViewBag.Title = "Quản lý đơn hàng";
    decimal totalPrices = 0;
    int index = 1;
    //string errorMessage = ViewBag.ErrorMessage.ToString() ?? "";
}

<div class="box box-primary">
    @if (!string.IsNullOrEmpty(TempData["Message"] as string))
    {
        <div class="alert alert-danger alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Lỗi!</strong> @TempData["Message"]
        </div>
    }


    <div class="box-header text-right"> 
        <div class="btn-group">
            <!-- //TODO
            YÊU CẦU: Đối với các chức năng liên quan đến đơn hàng, chỉ được hiển thị menu/nút của những chức năng
            phù hợp với trạng thái hiện tại của đơn hàng (ví dụ: Nếu đơn hàng chưa được chấp nhận thì không được chuyển để giao hàng)
            -->
            <div class="btn-group">
                @if (Model.Order.Status != SV20T1020639.DomainModels.Constants.ORDER_FINISHED
                && Model.Order.Status != SV20T1020639.DomainModels.Constants.ORDER_CANCEL
                && Model.Order.Status != SV20T1020639.DomainModels.Constants.ORDER_REJECTED)
                {
                    <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown">
                        Xử lý đơn hàng <span class="caret"></span>
                    </button>
                }

            <ul class="dropdown-menu" role="menu">
                <li id="listBtnAccept" style="display: none;">
                    <a href="~/Order/Finish/@Model.Order.OrderID"
                       onclick="return confirm('Xác nhận đơn hàng đã hoàn tất thành công?')">
                        Xác nhận hoàn tất đơn hàng
                    </a>
                </li>
                @switch (Model.Order.Status) {
                    case 1:
                        <li>
                            <a href="~/Order/Accept/@Model.Order.OrderID"
                               onclick="return confirm('Xác nhận duyệt chấp nhận đơn hàng này?')">
                                Duyệt đơn hàng
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="~/Order/Cancel/@Model.Order.OrderID"
                               onclick="return confirm('Xác nhận hủy đơn hàng này?')">
                                Hủy đơn hàng
                            </a>
                        </li>
                        <li>
                            <a href="~/Order/Reject/@Model.Order.OrderID"
                               onclick="return confirm('Xác nhận từ chối đơn hàng này?')">
                                Từ chối đơn hàng
                            </a>
                        </li>
                        break;
                    case 2:
                        <li class="listBtnShipping">
                            <a href="~/Order/Shipping/@Model.Order.OrderID?countProducts=@Model.OrderDetails.Count" class="btn-modal">
                                Chuyển giao hàng
                            </a>
                        </li>
                        <li class="divider listBtnShipping"></li>
                        <li class="listBtnShipping">
                            <a href="~/Order/Cancel/@Model.Order.OrderID"
                               onclick="return confirm('Xác nhận hủy đơn hàng này?')">
                                Hủy đơn hàng
                            </a>
                        </li>
                        break;
                    case 3:
                        <li>
                            <a href="~/Order/Finish/@Model.Order.OrderID"
                               onclick="return confirm('Xác nhận đơn hàng đã hoàn tất thành công?')">
                                Xác nhận hoàn tất đơn hàng
                            </a>
                        </li>
                        <li class="listBtnShipping">
                            <a href="~/Order/Cancel/@Model.Order.OrderID"
                               onclick="return confirm('Xác nhận hủy đơn hàng này?')">
                                Hủy đơn hàng
                            </a>
                        </li>   
                        break;
                    case 4:
                    case -1:
                    case -2:
                        <li>
                            <a>
                                Trống
                            </a>
                        </li>
                        break;

                }
            </ul>
            </div>
            @if (Model.Order.Status != SV20T1020639.DomainModels.Constants.ORDER_SHIPPING
            && Model.Order.Status != SV20T1020639.DomainModels.Constants.ORDER_FINISHED)
            {
                <a id="btnDeleteOrder" href="~/Order/Delete/@Model.Order.OrderID" class="btn btn-sm btn-danger" onclick="return confirm('Có chắc chắn muốn xóa đơn hàng này không?')"><i class="fa fa-trash"></i> Xóa đơn hàng</a>
            }
            <a href="~/Order" class="btn btn-sm btn-info">Quay lại</a>
        </div>
    </div>
    <div class="box-body form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2">Mã đơn hàng:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order.OrderID</p>
            </div>
            <label class="control-label col-sm-2">Ngày lập đơn hàng:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@string.Format("{0:dd/MM/yyyy HH:mm}", Model.Order.OrderTime)</p>
            </div>
            <label class="control-label col-sm-2">Nhân viên phụ trách:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order.EmployeeName</p>
            </div>
            <label class="control-label col-sm-2">Ngày nhận đơn hàng:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@string.Format("{0:dd/MM/yyyy HH:mm}", Model.Order.AcceptTime)</p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Khách hàng:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order.CustomerName</p>
            </div>
            <label class="control-label col-sm-2">Tên giao dịch:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order.CustomerContactName</p>
            </div>
            <label class="control-label col-sm-2">Địa chỉ:</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.Order.CustomerAddress</p>
            </div>
            <label class="control-label col-sm-2">Email:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order.CustomerEmail</p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Người giao hàng:</label>
            <div class="col-sm-4">
                <p id="ShipperName" class="form-control-static">@Model.Order.ShipperName</p>
            </div>
            <label class="control-label col-sm-2">Điện thoại:</label>
            <div class="col-sm-4">
                <p id="ShipperPhone" class="form-control-static">@Model.Order.ShipperPhone</p>
            </div>
            <label class="control-label col-sm-2">Nhận giao hàng lúc:</label>
            <div class="col-sm-4">
                <p id="ShippedTime" class="form-control-static">@string.Format("{0:dd/MM/yyyy HH:mm}", Model.Order.ShippedTime)</p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Trạng thái đơn hàng:</label>
            <div class="col-sm-4">
                <p id="StatusDescription" class="form-control-static">@Model.Order.StatusDescription</p>
            </div>
            <label class="control-label col-sm-2">Thời điểm hoàn tất:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@string.Format("{0:dd/MM/yyyy HH:mm}", Model.Order.FinishedTime)</p>
            </div>
        </div>
    </div>

    <div class="box-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <caption>
                    <h4 style="display: flex; justify-content: space-between">
                        Danh sách mặt hàng thuộc đơn hàng
                        @if (Model.Order.Status == SV20T1020639.DomainModels.Constants.ORDER_INIT) {
                            <a id="btnAddProduct" href="~/Order/Create?orderID=@Model.Order.OrderID"
                               class="btn btn-primary btn-modal" style="font-size: 14px;">
                                <i class="fa fa-plus"></i>
                                Bổ sung mặt hàng
                            </a>
                        }
                    </h4>
                </caption>
                <thead>
                    <tr class="bg-primary">
                        <th class="text-center">STT</th>
                        <th class="text-center">Tên hàng</th>
                        <th class="text-center">ĐVT</th>
                        <th class="text-center">Số lượng</th>
                        <th class="text-center">Giá</th>
                        <th class="text-center">Thành tiền</th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody id="listProducts">
                    @foreach (var item in Model.Details)
                    {
                        totalPrices += item.TotalPrice;
                        <tr>
                            <td class="text-center">@index</td>
                            <td>@item.ProductName</td>
                            <td class="text-center">@item.Unit</td>
                            <td id="Quantity-@item.ProductID" class="text-center">@item.Quantity</td>
                            <td id="SalePrice-@item.ProductID" class="text-right">@item.SalePrice</td>
                            <td id="TotalPrice-@item.ProductID" class="text-right">@item.TotalPrice</td>
                            <td class="text-right">
                                Chỉ được cập nhật hoặc xoá danh sách mặt hàng thuộc đơn hàng
                                    khi đơn hàng trong trạng thái chờ duyệt
                                @if (Model.Order.Status == SV20T1020639.DomainModels.Constants.ORDER_INIT)
                                {
                                    <a href="~/Order/EditDetail/@item.OrderID/@item.ProductID"
                                       class="btn btn-xs btn-primary btn-modal">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Order/DeleteDetail/@item.OrderID/@item.ProductID" class="btn btn-xs btn-danger"
                                       onclick="return confirm('Xóa mặt hàng này khỏi đơn hàng?')">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                } else {
                                    <a href="javascript:;" class="btn btn-xs btn-primary"
                                       style="cursor: no-drop;" title="Chỉ được sửa khi trạng thái đơn hàng đang chờ duyệt">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="javascript:;" class="btn btn-xs btn-danger"
                                       style="cursor: no-drop;" title="Chỉ được xoá khi trạng thái đơn hàng đang chờ duyệt">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                        index++;
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="5" class="text-right">Tổng cộng:</th>
                        <th class="text-right">@totalPrices</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<div id="dialogModal" class="modal fade" role="dialog">
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $(".btn-modal").click(function (e) {
                e.preventDefault();
                var link = $(this).prop("href");
                $.ajax({
                    url: link,
                    type: "GET",
                    async: false,
                    error: function () {
                        alert("Your request is not valid!");
                    },
                    success: function (data) {
                        $("#dialogModal").empty();
                        $("#dialogModal").html(data);
                        $("#dialogModal").modal();
                    }
                });
            });
        })
    </script>
} 