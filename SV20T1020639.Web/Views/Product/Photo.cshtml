@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="#">

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="PhotoID" value="photo.png" />
                    <img id="Photo" src="~/images/employees/photo.png" class="img img-bordered" style="width:200px" />
                </div>
            </div>
            <div class="form-group">

                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Description" autofocus />
                </div>
            </div>

           
            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiện thị ảnh:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="DisplayOrder" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ẩn ảnh:</label>
                <div class="col-sm-10">
                    <input type="checkbox"  name="IsHidden" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Product/Edit/123" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>