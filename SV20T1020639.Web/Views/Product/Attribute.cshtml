@model SV20T1020639.DomainModels.ProductAttribute
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Product/SaveAttribute" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="AttributeID" value="@Model.AttributeID" />
            <input type="hidden" name="ProductID" value="@Model.ProductID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Tên thuộc tính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="AttributeName" value="@Model.AttributeName" autofocus>
                    @Html.ValidationMessageFor(m => m.AttributeName, "", new { @style = "color: #f00;" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá trị thuộc tính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="AttributeValue" value="@Model.AttributeValue" autofocus>
                    @Html.ValidationMessageFor(m => m.AttributeValue, "", new { @style = "color: #f00;" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    @if (Model.AttributeID > 0)
                    {
                        <input type="number" min="1" class="form-control" name="DisplayOrder" value="@Model.DisplayOrder" />
                    }
                    else
                    {
                        <input type="number" min="1" class="form-control" name="DisplayOrder" autofocus />
                    }
                    @Html.ValidationMessageFor(m => m.DisplayOrder, "", new { @style = "color: #f00;" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/Product/Edit/@Model.ProductID">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>