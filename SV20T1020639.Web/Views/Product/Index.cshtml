@model SV20T1020639.Web.Models.ProductSearchInput
@{
    ViewBag.Title = "Quản lý mặt hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <form id="formSearch" action="~/Product/Search" method="get" data-container="#searchResult">
            <input type="hidden" name="@nameof(Model.PageSize)" value="@Model.PageSize" />
            <div class="row">
                <div class="col-sm-3">
                    <select class="form-control" id="filterCategory" name="categoryID">
                        @foreach (var item in SelectListHelper.Categories())
                        {
                            if (item.Value == Model.CategoryID.ToString())
                            {
                                <option value="@item.Value" selected>@item.Text</option>
                            }
                            else
                            {

                                <option value="@item.Value">@item.Text</option>
                            }
                        }
                    </select>

                </div>
                <div class="col-sm-3">
                    <select class="form-control" id="filterSupplier" name="supplierID">
                        @foreach (var item in SelectListHelper.Suppliers())
                        {
                            if (item.Value == Model.SupplierID.ToString())
                            {
                                <option value="@item.Value" selected>@item.Text</option>
                            }
                            else
                            {

                                <option value="@item.Value">@item.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-sm-6 input-group">
                    <input name="@nameof(Model.SearchValue)" type="text" class="form-control" placeholder="Nhập tên mặt hàng cần tìm"
                           value="@Model.SearchValue">
                    <div class="input-group-btn">
                        <button class="btn btn-info" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                        <a href="~/Product/Create" class="btn btn-primary" style="margin-left:5px">
                            <i class="fa fa-plus"></i>
                            Bổ sung
                        </a>
                    </div>
                </div>

            </div>
        </form>
        <!--Hien thi ket qua tim kiem-->
        <div id="searchResult"></div>

    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#formSearch").submit(function (e) {
                e.preventDefault();
                doSearch("#formSearch", 1);  // Chỉnh sửa ở đây, truyền đúng form và page
                return;
            });

            $('#filterCategory').click(function (e) {
                e.preventDefault();
                doSearch("#formSearch", 1);  // Chỉnh sửa ở đây, truyền đúng form và page
                return;
            });

            $('#filterSupplier').click(function (e) {
                e.preventDefault();
                doSearch("#formSearch", 1);  // Chỉnh sửa ở đây, truyền đúng form và page
                return;
            });

            doSearch("#formSearch", @Model.Page);
        });

        function doSearch(formSearchInput, page) {
            var url = $(formSearchInput).prop("action");
            var container = $(formSearchInput).data("container");
            var postData = $(formSearchInput).serializeArray();

            postData.push({ "name": "page", "value": page });
            $.ajax({
                url: url,
                type: "POST",
                data: postData,
                error: function () {
                    alert("Your request is not valid!");
                },
                success: function (data) {
                    // Kiểm tra tính hợp lệ của dữ liệu trước khi thay đổi nội dung
                    if (data) {
                        $(container).html(data);
                    } else {
                        alert("Invalid data received from the server.");
                    }
                }
            });
        }
    </script>
}
