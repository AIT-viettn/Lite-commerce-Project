@model SV20T1020639.Web.Models.ProductSearchResult


@{
    ViewBag.Title = "Quản lý mặt hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <form id="formSearch" action="~/Product/Index">
            <div class="row">
                <div class="col-sm-3">
                    <select class="form-control" name="category">
                        <option>--Tất cả loại hàng--</option>
                        <option>Điện gia dụng</option>
                        <option>Thực thẩm</option>
                    </select>

                </div>
                <div class="col-sm-3">
                    <select class="form-control" name="category">
                        <option>--Tất cả nhà cung cấp--</option>
                        <option>Cty TNHH 1 TV</option>
                        <option>Cty TNHH 2 TV</option>
                    </select>
                </div>
                <div class="col-sm-6 input-group">
                    <input name="searchValue" type="text" class="form-control" placeholder="Nhập tên mặt hàng cần tìm" value="@Model.SearchValue">
                    <div class="input-group-btn">
                        <button class="btn btn-info" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                        <a href="~/Product/Create" class="btn btn-primary" style="margin-left:5px">
                            <i class="fa fa-plus"></i>
                            Bổ sung
                        </a>
                    </div>
                </div>

            </div>
        </form>
        <!--Hien thi ket qua tim kiem-->
        <div>
            <p style="margin:10px 0 10px 0">
                Có <strong>1,024</strong> mặt hàng trong tổng số <strong>100</strong> trang
            </p>
            <div class="table-reponsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr class="bg-primary">
                            <th style="width:80px">Ảnh</th>
                            <th style="width:auto">Tên mặt hàng</th>
                            <th style="width:100px">Đơn vị tính</th>
                            <th style="width:120px">Giá</th>
                            <th style="width:100px">Ngừng bán?</th>
                            <th style="width:80px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>
                                    <img style="width:80px" src="~/images/products/@item.Photo" alt="Ảnh" />
                                </td>
                                <td>@item.ProductName
                                    <br />
                                    <i>@item.ProductDescription</i>
                                </td>
                                <td>@item.Unit</td>
                                <td>@item.Price</td>
                                <td></td>
                                <td class="text-right">
                                    <a href="~/Product/Edit/@item.ProductID" class="btn btn-xs btn-info">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Product/Delete/@item.ProductID" class="btn btn-xs btn-danger">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center">
                <ul class="pagination">
                    <li><a href="#">1</a></li>
                    <li class="active"><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>